@page
@model RazzorPagesBooksApp.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 clas="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; New</a>
        </div>
    </div>
    <br />
    <table class="table table-striped table-hover w-100">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Category[0].Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Category[0].Order)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category) {
                <tr>
                    <td class="w-25">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="w-25">
                        @Html.DisplayFor(modelItem => item.Order)
                    </td>
                    <td colspan="2" class="text-end">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-info-circle"></i>&nbsp; Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i> &nbsp; Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
